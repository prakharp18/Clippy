{
  "manifest_version": 3,
  "name": "Clippy",
  "description": "Smart URL shortener with QR, history, and safety checks",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["https://*/*", "http://*/*"]
}
